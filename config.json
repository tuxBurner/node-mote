{
  "webserver": {
    "port": 3000
  },
  "defaultView": {
    "type": "activity",
    "id": "FIRETV"
  },
  "devices": {
    "XBMC_LOCAL": {
      "type": "xbmc",
      "config": {
        "host": "localhost",
        "port": "9090"
      }
    },
    "FIRETV_BED": {
      "type": "firetv",
      "config": {
        "host": "192.168.0.159",
        "adbPath": "/usr/bin/adb"
      }
    },
    "DENON" : {
      "type" : "denon",
      "config" : {
        "host" : "192.168.0.88",
        "maxVol" : 60,
        "inputs" : ["DVD","MPLAY", "BD", "SAT", "GAME"],
        "surroundModes" : ["DIRECT", "MCH STEREO"]
      }
    }
  },
  "activities" : {
    "FIRETV" : {
      "panels" : [
        ["FIRETV_BED.defaultsPanel"],
        ["DENON.volumePanel"]
      ],
      "states" :
        {
          "DENON"  : {
            "power" : "ON",
            "input" : "SAT"
          },
          "SAMSUNG" : {
            "power" : {
              "button" : "ASD",
              "question" : "Is the tv on ?"
            },
            "input" : {
              "button" : "ASD",
              "question" : "Is the correct Input selected ?"
            }
          }
        }
    }
  }
}