{
  "webserver": {
    "port": 3000
  },
  "defaultView": {
    "type": "backend",
    "id": "XBMC_LOCAL"
  },
  "devices": {
    "XBMC_LOCAL": {
      "type": "xbmc",
      "config": {
        "host": "localhost",
        "port": "9090"
      }
    },
    "FIRETV_BED": {
      "type": "firetv",
      "config": {
        "host": "192.168.0.159",
        "adbPath": "/usr/bin/adb"
      }
    },
    "DENON" : {
      "type" : "denon",
      "config" : {
        "host" : "192.168.0.88",
        "maxVol" : 60,
        "inputs" : ["DVD","MPLAY", "BD", "SAT", "GAME"],
        "surroundModes" : ["DIRECT", "MCH STEREO"]
      }
    }
  },
  "activities" : {
    "FIRETV" : {
      "panels" : [
        ["FIRETV_BED.defaultsPanel"],
        ["DENON.volumePanel"]
      ],
      "states" :
        {
          "DENON"  :
            [
              {
                "action" : "POWER"
              },
              {
                "action" : "SETINPUT",
                "payload" : "SAT"
              }
            ]
          ,
          "SAMSUNG" :
          [
            {
              "action" : "Power",
              "question" :  "Is the Tv turned on ?"
            }
          ]
        }
    }
  }
}