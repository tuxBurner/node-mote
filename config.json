{
  "webserver": {
    "port": 3000
  },
  "defaultView": {
    "type": "activity",
    "id": "FIRETV"
  },
  "devices": {
    "XBMC_LOCAL": {
      "type": "xbmc",
      "config": {
        "host": "localhost",
        "port": "9090"
      }
    },
    "FIRETV_BED": {
      "type": "firetv",
      "config": {
        "host": "192.168.0.159",
        "adbPath": "/usr/bin/adb"
      }
    },
    "DENON": {
      "type": "denon",
      "config": {
        "host": "192.168.0.88",
        "maxVol": 60,
        "inputs": [
          "DVD",
          "MPLAY",
          "BD",
          "SAT/CBL",
          "GAME"
        ],
        "surroundModes": [
          "DIRECT",
          "MCH STEREO"
        ]
      }
    }
  },
  "activities": {
    "FIRETV": {
      "panels": [
        [
          "FIRETV_BED.defaultsPanel"
        ],
        [
          "DENON.volumePanel"
        ]
      ],
      "states": [
        {
          "backendId": "DENON",
          "states": [
            {
              "action": "POWER"
            },
            {
              "action": "SETINPUT",
              "payload": "SAT/CBL",
              "question": "Is the denon turned on CBL/SAT ?"
            }
          ]
        }
      ]
    }
  }
}